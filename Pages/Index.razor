@page "/"

<PageTitle>Index</PageTitle>

<div style="
    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items:center;
    min-height:95vh;       
">
  <h1 class="white" style="text-align:center; margin-bottom:50px; margin-top:20px">
      Explore data provided by the NASA API
  </h1>

  <div style="
      display:flex;
      justify-content:center;
      gap:40px;
      flex-wrap:wrap;
  ">

      <div class="home-card" @onclick="@(() => NavigateTo("/apod"))">
          <img src="apod.jpg" class="home-card-img" />
          <h2 class="white" style="margin-top:20px">Picture of the Day</h2>
          <p class="white">The universe, one stunning image at a time.</p>
      </div>

      <div class="home-card" @onclick="@(() => NavigateTo("/gallery"))">
          <img src="gallery.jpg" class="home-card-img" />
          <h2 class="white" style="margin-top:20px">NASA Image Gallery</h2>
          <p class="white">Browse thousands of photos from space missions.</p>
      </div>

      <div class="home-card" @onclick="@(() => NavigateTo("/NEObjects"))">
          <img src="AsteroidTrue0.jpg" class="home-card-img" />
          <h2 class="white" style="margin-top:20px">Near-Earth Objects</h2>
          <p class="white">Track asteroids approaching Earth.</p>
      </div>

  </div>
</div>
@code {
    [Inject] NavigationManager? Nav { get; set; }

    void NavigateTo(string url)
    {
        Nav?.NavigateTo(url);
    }
}
